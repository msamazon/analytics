extends ../layout/default

block content
  main.main
        // Breadcrumb
        ol.breadcrumb
          li.breadcrumb-item Administração
          li.breadcrumb-item Configurações
          li.breadcrumb-item.active Usuários
        .container-fluid
          .animated.fadeIn
            .row
              .col-md-12
                  .card
                    .card-header
                      i.fa.fa-align-justify
                      |  Usuários
                    .card-body   
                      != messages()  
                      table.table.table-striped
                        thead
                          tr
                            th Nome
                            th e-mail
                            th Senha
                            th Genero
                            th Perfil
                            th Autoridade
                            th Ativo
                            th Ações
                        tbody                                                  
                             each profile in list
                              tr
                                td #{profile.fullname}
                                td #{profile.email}
                                td #{profile.password}
                                td #{profile.gender}
                                td #{profile.profile} 
                                td #{profile.authority} 
                                td #{ativo = profile.active==true?'Sim':'Não' }                            
                                td 
                                  .form-group
                                    form.form-horizontal(action='/users/delete/#{profile.id}', method='post')                                      
                                      a(href='/users/edit/#{profile.id}')
                                        button(type='button', style='background-color:transparent; border-color:transparent;')
                                          i.fa.fa-edit                                                                                                              
                                      span                                      
                                      button(type='submit', style='background-color:transparent; border-color:transparent;')
                                        i.fa.fa-remove                                                              
                       if (pages > 1)
                        ul.pagination
                          != createPagination(pages, page)  
                      a(href='/users/new', target='_top')    
                       button.btn.btn-primary.btn-sm(type='button') Novo