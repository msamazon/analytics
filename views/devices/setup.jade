extends ../layout/default

block content
  main.main
        // Breadcrumb
        ol.breadcrumb
          li.breadcrumb-item Administração
          li.breadcrumb-item Configurações
          li.breadcrumb-item Devices
          li.breadcrumb-item.active Setup
        .container-fluid
          .animated.fadeIn
            .row
              .col-md-12
                  .card
                    .card-header
                      i.fa.fa-align-justify
                      |  Setup de Devices
                    .card-body   
                      != messages()  
                      table.table.table-striped
                        thead
                          tr
                            th Device
                            th Descrição
                            th Criado em 
                            th Criado por
                            th Ações
                        tbody                                                  
                             each device in list
                              tr
                                td #{device.device}
                                td #{device.description}                               
                                td #{formatDate(device.createdAt)} 
                                td #{(device.modifiedBy)}
                                td 
                                  .form-group
                                    form.form-horizontal(action='/devices/reset/#{device.id}', method='post')                                      
                                      a(href='/devices/setup/#{device.id}')
                                        button(type='button', placeholder='Setup', style='background-color:transparent; border-color:transparent;')
                                          i.fa.fa-server                                                                                                             
                                      span                                      
                                      button(type='submit', style='background-color:transparent; border-color:transparent;')
                                        i.fa.fa-repeat 
                                      button.btn.btn-info(type='button', data-toggle='modal', data-target='#infoModal')
                                        | Setup   
                       if (pages > 1)
                        ul.pagination
                          != createPagination(pages, page) 
          #infoModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
            .modal-dialog.modal-info(role='document')
              .modal-content
                .modal-header
                  h4.modal-title Setup Log
                  button.close(type='button', data-dismiss='modal', aria-label='Close')
                    span(aria-hidden='true') ×
                .modal-body
                  p One fine body…
                .modal-footer
                  button.btn.btn-secondary(type='button', data-dismiss='modal') Fechar
                  //- button.btn.btn-info(type='button') Save changes
              // /.modal-content
            // /.modal-dialog
          // /.modal
 