extends ../layout/default

block content
  main.main
        // Breadcrumb
        ol.breadcrumb
          li.breadcrumb-item Administração
          li.breadcrumb-item Configurações
          li.breadcrumb-item Parâmetros
          li.breadcrumb-item Perfil de Usuário
          li.breadcrumb-item.active Detalhes
        .container-fluid
          .animated.fadeIn
            .row
              .col-md-12
                  .card
                    .card-header
                      i.fa.fa-edit
                      |  Perdil de Usuário - Detalhes
                    .card-body   
                      form.form-horizontal
                        .form-group
                          label.form-control-label(for='userProfile') Perfil
                          .controls
                            .input-group
                              input#userProfile.form-control(size='16', type='text', value='#{profiles.userProfile}')                       
                        .form-group
                          label.form-control-label(for='ProfileDescription') Descrição
                          .controls
                            .input-group
                              input#ProfileDescription.form-control(size='100', type='text', value='#{profiles.ProfileDescription}')
                        .form-group
                          label.col-md-3.form-control-label(for='activedYN') Ativo?
                          .controls
                            .col-md-9
                              select#activedYN.form-control-sm(name='activedYN')
                                option(value='Y', selected=profiles.activedYN == 'Y') Sim
                                option(value='N', selected=profiles.activedYN == 'Y') Não
                         .form-group
                          label.form-control-label(for='createdBy') Criado por
                          .controls
                            .input-group
                              input#createdBy.form-control(size='16', type='text', readonly=true, value='#{profiles.createdBy}')
                        .form-group
                          label.form-control-label(for='createdAt') Criado em
                          .controls
                            .input-group
                              input#createdAt.form-control(size='16', type='text', readonly=true, value='#{profiles.createdAt}')                                                           
                            div
                                a(href='/profiles/edit/#{profiles.id}') Editar                                 
                        .form-actions
                          button.btn.btn-sm.btn-primary(type='submit',url='/profiles/delete/#{profiles.id}')
                            i.fa.fa-dot-circle-o
                            |  Deletar                          
                          button.btn.btn-sm.btn-danger(type='reset')
                            i.fa.fa-ban
                            |  Cancelar                               