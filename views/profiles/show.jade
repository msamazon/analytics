extends layout
block content
  main.main
        // Breadcrumb
        ol.breadcrumb
          li.breadcrumb-item Administração
          li.breadcrumb-item Configurações
          li.breadcrumb-item Parâmetros
          li.breadcrumb-item Perfil de Usuário
          li.breadcrumb-item.active Detalhes
        .container-fluid
          .animated.fadeIn
            .row
              .col-md-12
                  .card
                    .card-header
                      i.fa.fa-edit
                      |  Perdil de Usuário - Detalhes
                    .card-body   
                      form.form-horizontal
                        .form-group
                          label.form-control-label(for='HW Hex') HW Hex
                          .controls
                            .input-group
                              input#name.form-control(size='16', type='text')
                        //- .form-group
                        //-   label.form-control-label(for='actived') Ativo?
                        //-   .controls
                        //-     .input-group
                        //-       input#actived.form-control(size='16', type='text')
                        .form-group
                          label.form-control-label(for='firmware') Firmware
                          .controls
                            .input-group
                              input#firmware.form-control(size='16', type='text')
                        .form-group
                          label.form-control-label(for='version') Versão
                          .controls
                            .input-group
                              input#version.form-control(size='16', type='text')
                        .form-group
                          label.form-control-label(for='sms_srv_addr') Provedor de SMS
                          .controls
                            .input-group
                              input#sms_srv_addr.form-control(size='16', type='text')
                        .form-group
                          label.form-control-label(for='sms_srv_key') Chave do Provedor de SMS
                          .controls
                            .input-group
                              input#sms_srv_key.form-control(size='16', type='text')
                        .form-group
                          label.form-control-label(for='sms_apn') SMS APN
                          .controls
                            .input-group
                              input#sms_apn.form-control(size='16', type='text')
                        .form-group
                          label.form-control-label(for='sms_user') SMS Usuário
                          .controls
                            .input-group
                              input#sms_user.form-control(size='16', type='text')
                        .form-group
                          label.form-control-label(for='sms_password') SMS Senha
                          .controls
                            .input-group
                              input#sms_password.form-control(size='16', type='text')
                        .form-group
                          label.form-control-label(for='sms_set_ip') Servidor
                          .controls
                            .input-group
                              input#sms_set_ip.form-control(size='16', type='text')
                        .form-group
                          label.form-control-label(for='sms_set_port') Porta do Servidor
                          .controls
                            .input-group
                              input#sms_set_port.form-control(size='16', type='text')
                        .form-group
                          label.form-control-label(for='createdAt') Criado em
                          .controls
                            .input-group
                              input#createdAt.form-control(size='16', type='text')
                        .form-group
                          label.form-control-label(for='createdBy') Criado por
                          .controls
                            .input-group
                              input#createdBy.form-control(size='16', type='text')                                                             
                            div
                                a(href='/devices/edit/#{device.id}') Editar                                 
                        .form-actions
                          button.btn.btn-sm.btn-primary(type='submit',url='/employees/delete/#{device.id}')
                            i.fa.fa-dot-circle-o
                            |  Deletar                          
                          button.btn.btn-sm.btn-danger(type='reset')
                            i.fa.fa-ban
                            |  Cancelar                               