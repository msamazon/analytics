extends ../layout/default

block content
  main.main
        // Breadcrumb
        ol.breadcrumb
          li.breadcrumb-item Configurações
          li.breadcrumb-item Parãmetros
          li.breadcrumb-item.active Perfil de Usuário
        .container-fluid
          .animated.fadeIn
            .row
              .col-md-12
                  .card
                    .card-header
                      i.fa.fa-align-justify
                      |  Perfil de usuário
                    .card-body   
                      button.btn.btn-primary.active(type='button') Novo                 
                      table.table.table-striped
                        thead
                          tr
                            th Perfil
                            th Descrição
                            th Ativo
                            th Criado em 
                            th Criado por
                            th Modificado em 
                            th Modificado por
                            th Ações
                        tbody                                                  
                             each profile in list
                              tr
                                td #{profile.userProfile}
                                td #{profile.ProfileDescription} 
                                td #{ativo = profile.activedYN?"Y":"N" }                                
                                td #{formatDate(profile.createdAt)}
                                td #{(profile.createdBy)}
                                td #{formatDate(profile.createdAt)}
                                td #{(profile.createdBy)}
                                td 
                                  a(href='/user/edit/#{profile.id}') Editar 
                                  span
                                  a(href='/user/delete/#{profile.id}') Deletar                           
                       if (pages > 1)
                        ul.pagination
                          != createPagination(pages, page)  